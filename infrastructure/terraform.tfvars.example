# Example terraform.tfvars file
# Copy this to terraform.tfvars and fill in your values

# Required variables
repository_name = "your-github-username/summonsscraper"

# Optional overrides
environment          = "dev"
aws_region          = "us-east-1"
ec2_instance_type   = "t3.small"
key_pair_name       = "your-key-pair-name"

# Cost optimization options
enable_spot_instance    = false              # Enable for up to 90% savings (but can be interrupted)

# Security - restrict access to your IP
# allowed_cidr_blocks = ["your.ip.address/32"]
